{
  "compilerOptions": {
    "target": "ESNext",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
   
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
   
    "noEmit": true,
    "module": "es2020",  // or "es2015", "es2020", etc.
    "moduleResolution": "bundler",  // Use "bundler" for bundler-based projects (e.g., Webpack, Vite)

    "forceConsistentCasingInFileNames": true,
  
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts","global.d.ts", "src",  "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
